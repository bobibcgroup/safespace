// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String     @id @default(cuid())
  email                   String     @unique
  name                    String?
  password                String // hashed password
  role                    String     @default("hr") // admin, hr
  telegramChatId          String? // Telegram chat ID for notifications
  notificationPreferences String? // JSON object with notification preferences
  createdAt               DateTime   @default(now())
  updatedAt               DateTime   @updatedAt
  campaigns               Campaign[]
  notes                   Note[]
}

model Campaign {
  id                String       @id @default(cuid())
  title             String
  slug              String?      @unique // URL-friendly slug based on title (nullable for backward compatibility)
  question          String
  startDate         DateTime?
  closeDate         DateTime?
  isActive          Boolean      @default(true)
  publicReportOn    Boolean      @default(false)
  publicReportPassword String?   // Hashed password for public report access
  aiReportGenerated Boolean      @default(false)
  isRecurring       Boolean      @default(false)
  recurringInterval String? // weekly, monthly, quarterly
  userId            String
  user              User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  responses         Response[]
  notes             Note[]
  actionItems       ActionItem[]
  aiReport          AIReport?
}

model Response {
  id          String       @id @default(cuid())
  campaignId  String
  campaign    Campaign     @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  text        String
  mood        String? // üòÄ üôÇ üòê üôÅ üòû
  status      String       @default("new") // new, needs_attention, in_review, resolved, parked
  sentiment   String? // positive, neutral, negative
  themes      String? // JSON array of themes
  aiLabels    String? // JSON object with AI-generated labels
  attention   String? // urgent, moderate, positive
  assignedTo  String? // User ID of assigned team member
  tags        String? // JSON array of tags
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  notes       Note[]
  actionItems ActionItem[]
}

model Note {
  id         String    @id @default(cuid())
  campaignId String
  campaign   Campaign  @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  responseId String?
  response   Response? @relation(fields: [responseId], references: [id], onDelete: Cascade)
  text       String
  userId     String?
  user       User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model ActionItem {
  id          String    @id @default(cuid())
  campaignId  String
  campaign    Campaign  @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  responseId  String?
  response    Response? @relation(fields: [responseId], references: [id], onDelete: Cascade)
  title       String
  owner       String?
  dueDate     DateTime?
  isCompleted Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model AIReport {
  id            String   @id @default(cuid())
  campaignId    String   @unique
  campaign      Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  summary       String
  sentiment     String // JSON object with sentiment breakdown
  themes        String // JSON array of themes with descriptions
  highlights    String // JSON array of highlight cards
  quotes        String // JSON array of representative quotes
  suggestions   String // JSON array of suggested actions
  participation String // JSON object with participation metrics
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
